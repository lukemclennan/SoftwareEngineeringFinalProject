<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SoftwareEngineeringFinalProject.LoginPage"
    BackgroundColor="#f6f6f6">
    <StackLayout Margin="0, 0, 0, 0">
        <Image Margin="0,20,0,0" Source="https://png.pngitem.com/pimgs/s/518-5182080_vintage-flower-clipart-transparent-background-vintage-flower-transparent.png" WidthRequest="200" HeightRequest="200"/>
        <Label Text ="Becky's Flower Shop" TextColor="#EBBE9B" TextTransform="Uppercase" HorizontalOptions="Center" FontSize= "35" Margin ="0,0,0,30"/>
        <Entry PlaceholderColor="#EBBE9B" x:Name="Entry_Username" Placeholder="Username"/>
        <Entry PlaceholderColor="#EBBE9B" IsPassword ="True" x:Name="Entry_Password" Placeholder="Password"/>
        <Button TextColor = "White" BackgroundColor="#EBBE9B" WidthRequest="350" HorizontalOptions="Center" CornerRadius="45" x:Name="Btn_Signin" Text="Login" Clicked="LoginProcedure" />        
        <Button TextColor="White" BackgroundColor="#EBBE9B" Margin="0,20,0,0" WidthRequest="350" HorizontalOptions="Center" CornerRadius="45" Text="Sign up" Clicked="SignUpProcedure"/>
    </StackLayout>
</ContentPage>
