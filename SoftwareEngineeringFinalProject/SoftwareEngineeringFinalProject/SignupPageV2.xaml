<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SoftwareEngineeringFinalProject.SignupPageV2">
    <StackLayout Margin="0, 60, 0, 0">
        <Label Text ="Registration" TextColor="#EBBE9B" TextTransform="Uppercase" HorizontalOptions="Center" FontSize= "35" Margin ="0,0,0,30"/>
        <Entry PlaceholderColor="#EBBE9B" x:Name="Entry_Firstname" Placeholder="First Name"/>
        <Entry PlaceholderColor="#EBBE9B" x:Name="Entry_Lastname" Placeholder="Last Name"/>
        <Entry PlaceholderColor="#EBBE9B" x:Name="Entry_Username" Placeholder="Username"/>
        <Entry PlaceholderColor="#EBBE9B" IsPassword ="True" x:Name="Entry_Password" Placeholder="Password"/>
        <Entry PlaceholderColor="#EBBE9B" IsPassword ="True" x:Name="Entry_Password2" Placeholder="Password Confirmation"/>
       <!--
        <Button TextColor = "White" BackgroundColor="#EBBE9B" WidthRequest="350" HorizontalOptions="Center" CornerRadius="45" x:Name="Btn_Signin" Text="Login" />
        -->
        <Button TextColor="White" BackgroundColor="#EBBE9B"
                Margin="0,20,0,0" WidthRequest="350" HorizontalOptions="Center"
                CornerRadius="45" Text="Sign up" Clicked="SignupProcedure"/>
    </StackLayout>
</ContentPage>
