<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SoftwareEngineeringFinalProject.AdminLoginPage">
    <StackLayout Margin="0, 100, 0, 0">
        <Label Text ="Administration Login" TextColor="#7EA172" TextTransform="Uppercase" HorizontalOptions="Center" FontSize= "35" Margin ="0,0,0,30"/>
        
        <Entry  PlaceholderColor="#7EA172" x:Name="Entry_Username" Placeholder="Username"/>
        <Entry PlaceholderColor="#7EA172" IsPassword ="True" x:Name="Entry_Password" Placeholder="Password"/>

        <Button TextColor = "White" BackgroundColor="#7EA172" WidthRequest="350" HorizontalOptions="Center" CornerRadius="45" x:Name="Btn_Signin" Clicked = "LoginProcedure" Text="Login"/>
    </StackLayout>
</ContentPage>

